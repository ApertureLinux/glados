# Maintainer : Zach Osman <zach@aperturelinux.org>

pkgname=aperture-calamares
pkgver=0.1.0
pkgrel=1
pkgdesc='Aperture Calamares Config'
arch=('x86_64')
license=('GPL2')
source=("file://$PWD/calamares")
noextract=("file://$PWD/calamares")
sha256sums=('SKIP')

package() {
    mkdir -p "$pkgdir/usr/share/calamares"
    mkdir -p "$pkgdir/lib/calamares/modules/pacstrap"

    cp -r "$srcdir/calamares/usr/share/calamares" "$pkgdir/usr/share/calamares/"
    cp -r "$srcdir/calamares/usr/lib/calamares/modules/pacstrap" "$pkgdir/usr/lib/calamares/modules/pacstrap/"
}
