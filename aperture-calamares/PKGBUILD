# Maintainer : Zach Osman <zach@aperturelinux.org>

pkgname=aperture-calamares
pkgver=0.1.6
pkgrel=1
pkgdesc='Aperture Calamares Config'
arch=('x86_64')
license=('GPL2')
depends=('calamares')
_commit="e4203078db16e92a489d7d7caf0c167bf3abc110"
source=("https://github.com/ApertureLinux/aperture-calamares/archive/${_commit}.zip")
sha256sums=('SKIP')

package() {
    mkdir -p "$pkgdir/usr/share/calamares"
    mkdir -p "$pkgdir/usr/lib/calamares/modules/pacstrap"

    /bin/cp -rf "$srcdir/aperture-calamares-${_commit}/share/calamares" "$pkgdir/usr/share/"
    /bin/cp -rf "$srcdir/aperture-calamares-${_commit}/lib/calamares/modules/pacstrap" "$pkgdir/usr/lib/calamares/modules/"
}
